<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.firebasesetup">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".EPortal"
            android:label="@string/title_activity_eportal"
            android:theme="@style/AppTheme.NoActionBar"></activity>
            <activity
            android:name=".MPortal"
            android:label="MPortal"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        
        <activity android:name=".Login" />
        <activity
            android:name=".WelcomeScreen"
            android:label="@string/title_activity_welcome_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ManagerSetup"
            android:parentActivityName=".SignupChoice" />
        <activity android:name=".SignupChoice" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BusinessSetup"
            android:parentActivityName=".ManagerSetup" />
        <activity
            android:name=".EmployeeSetup"
            android:parentActivityName=".SignupChoice" />
    </application>

</manifest>